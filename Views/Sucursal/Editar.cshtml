@using  BriveExam.Clases;
@model SucursalCLS

@{
    ViewData["Title"] = "Editar";


}

<h1>Editar Sucursal</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Editar" asp-controller="Sucursal" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="IdSucursal" class="control-label"></label>
                <input asp-for="IdSucursal" class="form-control" readonly />

            </div>


            <div class="form-group">

                <label asp-for="NombreSucursal"></label>
                <input asp-for="NombreSucursal" class="form form-control" />
                <span asp-validation-for="NombreSucursal" class="text-danger"></span>
            </div>

            <div class="form-group">

                <label asp-for="Direccion"></label>
                <input asp-for="Direccion" class="form form-control" />
                <span asp-validation-for="Direccion" class="text-danger"></span>

            </div>

            <div class="form-group">

                <label asp-for="Telefono"></label>
                <input asp-for="Telefono" type="number" class="form form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>

            </div>

            <div class="form-group">
                <div class="col-12">
                    <div class="col-12 col-sm-4 offset-sm-4 col-md-2 offset-md-5 col-lg-4 offset-lg-5">
                        <button type="submit" value="Guardar" class="btn btn-info"><i class="fas fa-search"></i> Guardar</button>
                        <br /> <a class="btn btn-danger" asp-controller="Sucursal" asp-action="Index">Regresar</a>
                    </div>
                </div>

            </div>

        </form>
        </div>
    </div>


